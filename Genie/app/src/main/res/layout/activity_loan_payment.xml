<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.user.genie.LoanPaymentActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Payment"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_below="@+id/toolbar"
    android:layout_margin="10dp">
    <EditText
        android:id="@+id/lenderTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:textAlignment="viewStart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:hint="Select your Lender"
        android:focusable="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:inputType="number"
        android:singleLine="true"
        android:background="@drawable/edittext_top_bg"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        tools:ignore="RtlCompat" />
    <EditText
        android:id="@+id/accountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:textAlignment="viewStart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="3dp"
        android:hint="Loan Account Amount"
        android:focusable="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:inputType="number"
        android:singleLine="true"
        android:background="@drawable/edittext_top_bg"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        tools:ignore="RtlCompat" />

    <Button
        android:visibility="visible"
        android:id="@+id/btn_prepaid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Get Payable Amount"
        android:textAllCaps="false"
        android:background="@drawable/my_button"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginBottom="150dp"/>
</LinearLayout>
</RelativeLayout>
