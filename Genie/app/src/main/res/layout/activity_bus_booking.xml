<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.example.user.genie.BusBookingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Tickets"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/from_to_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:weightSum="2"
        tools:ignore="InvalidId">



        <EditText
            android:id="@+id/from_dest"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textAlignment="viewStart"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="From"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:focusable="false"
            android:layout_marginRight="5dp"
            tools:ignore="RtlCompat" />

        <EditText
            android:id="@+id/to_dest"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textAlignment="viewStart"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="To"
            android:imeOptions="actionDone"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:inputType="text"
            android:singleLine="true"
            android:focusable="false"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            tools:ignore="RtlCompat" />


    </LinearLayout>
    <TextView
        android:id="@+id/dept_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:textAlignment="viewStart"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:hint="Departure Date"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryDark"
        android:inputType="text"
        android:singleLine="true"
        android:padding="10dp"
        android:background="@drawable/edittext_top_bg"
        tools:ignore="RtlCompat" />

    <Button
        android:visibility="visible"
        android:id="@+id/searchBusTv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Search Buses"
        android:textAllCaps="false"
        android:background="@drawable/my_button"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp" />

</LinearLayout>
