<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.genie1.user.genie.FlightTravellerInfoActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/listTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="13sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/bottomRel">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Traveller Information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"/>
            <EditText
                android:id="@+id/firstnameEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="First and Middle Name"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/lastnameEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Last Name"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/dobEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Date of Birth"
                android:focusable="false"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/passportnoEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Passport Number"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/passportexpireEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Passport Expire Date"
                android:focusable="false"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/nationalityEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Passenger Nationality"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Contact Information"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"/>
            <EditText
                android:id="@+id/mobileEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Mobile"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/emailEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Email"

                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/bottomRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:padding="1dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            android:text="22,600"/>
        <Button
            android:id="@+id/continueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Continue"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/custombutton"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textAllCaps="false"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>


    </RelativeLayout>
</RelativeLayout>
