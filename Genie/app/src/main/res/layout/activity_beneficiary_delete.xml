<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.user.genie.BeneficiaryDeleteActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beneficiary Details"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/moneyTransferTV">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            android:background="@color/colorPrimary"
            card_view:cardBackgroundColor="@color/colorPrimary"
            android:padding="18dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:padding="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/accountTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Account no"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp"
                        android:layout_weight="1.6"
                        android:padding="5dp"
                        />


                    <ImageView
                        android:id="@+id/deleteImg"
                        android:layout_weight="0.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_delete_photo"
                        android:visibility="visible"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/banknameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trainNameTv"
                    android:layout_alignParentLeft="true"
                    android:text="bank name"

                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/ifscTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trainNameTv"
                    android:layout_alignParentLeft="true"
                    android:text="ifsc code"
                    android:layout_marginTop="1dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"

                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trainNameTv"
                    android:layout_alignParentLeft="true"
                    android:text="name"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/mobileTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trainNameTv"
                    android:layout_alignParentLeft="true"
                    android:text="mobile"
                    android:layout_marginTop="1dp"
                    android:textSize="13sp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/lastAccessTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trainNameTv"
                    android:layout_alignParentLeft="true"
                    android:text="LastAccessDate"
                    android:layout_marginTop="1dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"

                    android:textColor="@color/colorPrimaryDark"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/moneyTransferTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Money Transfer"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/edittext_top_bg"/>

</RelativeLayout>
