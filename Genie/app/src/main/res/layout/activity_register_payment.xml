<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".RequestWalletActivity">

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/MyDarkToolbarStyle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Payment"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar"
            android:layout_margin="10dp">
            <EditText
                android:visibility="gone"
                android:id="@+id/senderPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Phone Number"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />
            <EditText
                android:id="@+id/amountTv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:hint="Add Amount"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />


            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/payment_method"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Payment Method"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="text"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@drawable/edittext_top_bg"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">


                <EditText
                    android:id="@+id/refCode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_top_bg"
                    android:cursorVisible="true"
                    android:hint="UTR Number/ Bank Reference"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:gravity="start|center"
                    android:padding="10dp"
                    android:textColor="#000" />

            </LinearLayout>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/dept_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:cursorVisible="false"
                android:gravity="start|center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Date"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:inputType="text"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@drawable/edittext_top_bg"
                tools:ignore="RtlCompat" />





            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@drawable/edittext_top_bg">
                <Spinner
                    android:id="@+id/paymentmethodspinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:spinnerMode="dialog"
                    android:entries="@array/paymentmethod">
                </Spinner>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/netBankingLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:padding="5dp"
                        android:text="Account Number"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/account_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:text="50200033159458"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:padding="5dp"
                        android:text="IFSC Code"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ifsc_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="false"
                            android:gravity="center"
                            android:text="HDFC0000122"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:padding="5dp"
                        android:text="Bank Name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/paid_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="false"
                            android:text="HDFC BANK"
                            android:gravity="center"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/upiLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/genie_barcode"/>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please click the link below to download the image"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"/>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txtCredits"
                    android:autoLink="web"
                    android:id="@+id/infoTxtCredits"
                    android:gravity="center"
                    android:textColor="#1bbfec"
                    android:layout_centerInParent="true"
                    android:linksClickable="true">

                </TextView>
            </LinearLayout>




            <EditText
                android:visibility="gone"
                android:id="@+id/otpTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="3dp"
                android:hint="OTP"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />


            <Button
                android:visibility="visible"
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Proceed"
                android:textAllCaps="false"
                android:background="@drawable/my_button"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_marginBottom="150dp"/>

            <Button
                android:visibility="gone"
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Send"
                android:textAllCaps="false"
                android:background="@drawable/my_button"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_marginBottom="150dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>