<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insurance Details"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/policynoEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:hint="Enter PolicyNo"


                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionNext"
                />
            <EditText
                android:id="@+id/dobEd"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:hint="Enter DOB"

                android:focusable="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat"
                android:imeOptions="actionDone"
                />
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:background="@drawable/my_button"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <LinearLayout
            android:id="@+id/detailsLn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
                android:layout_margin="10dp">
            <TextView
                android:id="@+id/merchantnameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:text="Merchant_Name"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:padding="4dp"/>
            <TextView
                android:id="@+id/tvPolicyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:text="Policy_Number"
                android:layout_margin="1dp"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:text="Customer Name"
                android:layout_margin="1dp"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvDueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:text="Due_Form"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvDueTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:text="Due_To"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvInstallmentNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:text="Installment Number"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvTotalPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:text="Total Premium"
                android:padding="2dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvDueAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="1dp"
                android:text="Due_Amount"
                android:padding="2dp"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btnPayment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:text="Payment"
                android:textAllCaps="false"
                android:background="@drawable/my_button"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
