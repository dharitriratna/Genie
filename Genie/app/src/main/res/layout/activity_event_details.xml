<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:ignore="RtlHardcoded">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/test"
        android:background="@color/colorPrimary"
        android:fillViewport="true"
        android:foreground="@drawable/abc_btn_selector"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/colorPrimary"
            android:foreground="@drawable/abc_btn_selector"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:visibility="gone"
                android:id="@+id/eventid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Price"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/event_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Price"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                />

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        >

                        <EditText
                            android:id="@+id/organizer_name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="true"
                            android:hint="Name"
                            android:textSize="15sp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="text"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >

                        <EditText
                            android:id="@+id/organizer_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="true"
                            android:hint="Phone Number"
                            android:textSize="15sp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="number"
                            android:gravity="start|center"
                            android:padding="10dp"
                            android:textColor="#000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:weightSum="2">



                        <TextView
                            android:id="@+id/date"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:textAlignment="viewStart"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:hint="Date"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:background="@drawable/edittext_top_bg"
                            android:layout_marginRight="10dp"
                            tools:ignore="RtlCompat" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="true"
                            android:textAlignment="viewStart"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:hint="Time"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="text"
                            android:singleLine="true"
                            android:padding="10dp"
                            android:background="@drawable/edittext_top_bg"
                            tools:ignore="RtlCompat" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        >

                        <EditText
                            android:id="@+id/organizer_address"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@drawable/edittext_top_bg"
                            android:cursorVisible="true"
                            android:hint="Address"
                            android:singleLine="false"
                            android:textSize="15sp"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:inputType="textMultiLine"
                            android:gravity="start"
                            android:padding="10dp"
                            android:textColor="#000" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="Submit"
                        android:textAllCaps="false"
                        android:background="@drawable/my_button"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/black"
            app:expandedTitleGravity="bottom|center_horizontal"
            app:expandedTitleTextAppearance="@style/BookmarksText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="">


            <ImageView
                android:id="@+id/eventimage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                app:srcCompat="@drawable/events_img"
                android:scaleType="fitXY"/>




            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:elevation="0dp"

                app:layout_collapseMode="pin"
                app:popupTheme="@style/MyDarkToolbarStyle"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:title=""
                app:titleTextColor="@android:color/black" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>




</android.support.design.widget.CoordinatorLayout>