<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        android:background="@color/colorPrimary"
        card_view:cardBackgroundColor="@color/colorPrimary"
        android:padding="18dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/recharge_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recharge Amount"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:layout_weight="1"
                android:padding="5dp"
                />
                <TextView
                    android:id="@+id/shortDesc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Short Description"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/banknameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainNameTv"
                android:layout_alignParentLeft="true"
                android:text="bank name"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/ifscTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainNameTv"
                android:layout_alignParentLeft="true"
                android:text="ifsc code"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/talktime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainNameTv"
                android:layout_alignParentLeft="true"
                android:text="Talktime"
                android:layout_marginTop="1dp"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"/>
            <TextView
                android:id="@+id/validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainNameTv"
                android:layout_alignParentLeft="true"
                android:text="Validity"
                android:layout_marginTop="1dp"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/descLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainNameTv"
                android:layout_alignParentLeft="true"
                android:text="Description"
                android:singleLine="true"
                android:layout_marginTop="1dp"
                android:textSize="13sp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimaryDark"/>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
