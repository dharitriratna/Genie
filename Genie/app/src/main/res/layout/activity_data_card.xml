<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MobileRecharge"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DataCard Recharge"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      >

        <RadioGroup
            android:weightSum="2"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:checked="true"
                android:layout_weight="1"
                android:id="@+id/prepaid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Prepaid"
                android:enabled="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"/>

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/postpaid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Postpaid"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:visibility="gone"/>

        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp">



            <EditText
                android:id="@+id/contact_number"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Mobile Number"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"

                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />
            <ImageView
                android:id="@+id/contact_list"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_contacts_black_24dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"

            android:weightSum="1">



            <TextView
                android:id="@+id/operatorTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"

                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Operator"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="text"
                android:singleLine="true"
                android:padding="10dp"
                android:focusable="false"
                android:background="@drawable/edittext_top_bg"

                tools:ignore="RtlCompat" />




        </LinearLayout>
        <TextView
            android:id="@+id/circleTv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"

            android:hint="Circle"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:inputType="text"
            android:singleLine="true"

            android:background="@drawable/edittext_top_bg"

            tools:ignore="RtlCompat"
            android:focusable="false"
            android:layout_marginTop="5dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:padding="10dp"/>

        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/colorPrimaryDark"
            android:text="Choose Operators"
            android:textSize="16sp"
            android:layout_marginRight="25dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp">



            <EditText
                android:id="@+id/amountTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:hint="Amount"
                android:textColorHint="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="number"
                android:singleLine="true"
                android:padding="10dp"
                android:background="@drawable/edittext_top_bg"
                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Browse Plans"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="of all operators"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>


        <Button
            android:visibility="visible"
            android:id="@+id/btn_prepaid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Proceed to Recharge"
            android:textAllCaps="false"
            android:background="@drawable/my_button"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_marginBottom="150dp"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_postpaid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Proceed to Pay Bill"
            android:textAllCaps="false"
            android:background="@drawable/my_button"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_marginBottom="150dp"/>



    </LinearLayout>
</LinearLayout>

