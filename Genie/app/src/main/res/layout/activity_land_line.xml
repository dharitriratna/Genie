<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".LandLine">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:popupTheme="@style/MyDarkToolbarStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/black">

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LandLine/BroadBand"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimary" />
    </android.support.v7.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp">



        <TextView
            android:id="@+id/lb_operator_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"

            android:hint="Operator Name"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:inputType="text"
            android:singleLine="true"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp">



        <TextView
            android:id="@+id/circleTv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"

            android:hint="Circle Name"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:inputType="text"
            android:singleLine="true"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp">



        <EditText
            android:id="@+id/acc_user_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="Account Number/User Name"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:inputType="number"
            android:singleLine="true"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            >



            <EditText
                android:id="@+id/phoneTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"

                android:hint="Landline number with Std Code"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"

                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/stdlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:visibility="gone">



            <EditText
                android:id="@+id/stdTv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:textAlignment="viewStart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"

                android:hint="STD Code"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:inputType="text"
                android:singleLine="true"
                android:background="@drawable/edittext_top_bg"
                android:padding="10dp"

                android:layout_marginRight="10dp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:padding="5dp">



        <EditText
            android:id="@+id/amountEd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:hint="Amount"

            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:inputType="number"
            android:singleLine="true"
            android:background="@drawable/edittext_top_bg"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="RtlCompat" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginTop="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/noteTv"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:textAlignment="viewStart"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="NOTE:  Paying amount should be exactly same as the bill amount for BSNL Landlines, BSNL Mobile, MTNL Delhi Landlines, if paying after the due date then please add the late payment fee as mentioned in your bill."

            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:inputType="textMultiLine"


            android:padding="5dp"
            android:layout_marginRight="2dp"
            tools:ignore="RtlCompat" />



    </LinearLayout>
    <Button
        android:visibility="visible"
        android:id="@+id/btn_lb_proceed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Proceed"
        android:textAllCaps="false"
        android:background="@drawable/my_button"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:layout_marginBottom="200dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>