<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="#dacd05" android:startColor="#dacd05" android:type="linear" />

            <stroke android:width="1dp" android:color="@color/colorPrimary" />

            <corners android:radius="1dp" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="7dp"
                android:top="3dp" />
        </shape></item>
        <item >
            <bitmap
                android:gravity="right"
                android:src="@drawable/downarrow"
                />
        </item>
    </layer-list></item>

</selector>